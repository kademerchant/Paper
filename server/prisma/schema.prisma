generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// | Paper models | 7/26 |

model Post {
  id        String    @id @default(uuid())
  body      String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  author    User      @relation(fields: [userId], references: [id])
  userId    String    @unique
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  role  Role   @default(BASIC)
  password String
  posts    Post[]

  @@index(email)
}

enum Role {
  BASIC
  ADMIN
}
